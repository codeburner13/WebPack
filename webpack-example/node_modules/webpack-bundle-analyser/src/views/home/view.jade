section.hero.is-info
  .hero-body
    .container
      h1.title
        if TITLE
          = TITLE
        else
          | Your awesome bundle
      h2.subtitle
        | Webpack Bundle Analyser

br

nav.level
  .level-item.has-text-centered
    div
      p.heading Webpack
      p.title
        | v
        = stats.version

  .level-item.has-text-centered
    div
      p.heading
        = stats.time
        |  ms
      p.title
        | Time

  .level-item.has-text-centered
    div
      p.heading
        = stats.hash
      p.title
        | Hash

  .level-item.has-text-centered
    div: a(href="#module")
      p.heading
        | Modules
      p.title
        = stats.modules.length

  .level-item.has-text-centered
    div: a(href="#assets")
      p.heading
        | Assets
      p.title
        = stats.assets.length

  .level-item.has-text-centered
    div
      if stats.errors.length && stats.warnings.length
        a(href="#errors")
          p.heading
            | Warnings and errors
          p.title
            = stats.warnings.length + stats.errors.length
      else if stats.errors.length
        a(href="#errors")
          p.heading
            | Errors
          p.title
            = stats.errors.length
      else if stats.warnings.length
        a(href="#warnings")
          p.heading
            | Warnings
          p.title
            = stats.warnings.length
      else
        p.heading
          | Errors
        p.title
          | 0

.hero-body
  .container: a(href="#chunks")
    h1.title
      = stats.chunks.length
    h2.subtitle
      | chunks found

nav.level
  each chunk in stats.chunks
    .level-item.has-text-centered
      div
        p.heading
          if chunk.names[0]
            = chunk.names[0]
          else
            | Unnamed
        p.title
          = require('formatSize').default(chunk.size)
