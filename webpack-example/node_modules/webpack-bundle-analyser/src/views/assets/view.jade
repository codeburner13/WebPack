table.table.is-fullwidth
  thead
    tr
      th assets
      th size
      th chunks
      th names
      th flags

  tbody
    each asset in stats.assets
      tr
        td: pre: code
          = asset.name
        td
          = require('formatSize').default(asset.size)
        td
          each chunk in asset.chunks
            a.button.is-info(href="#chunk/#{chunk}")
              = chunk
              = " "
        td
          each name in asset.chunkNames
            code
              = name
              = " "
        td
          if module.emitted
            span.tag.is-success
              | emitted
              = " "
