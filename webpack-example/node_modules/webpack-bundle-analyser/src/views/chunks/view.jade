table.table.is-condensed
  thead
    tr
      th id
      th names
      th modules
      th size
      th parents
      th flags

  tbody
    each chunk in stats.chunks
      tr
        td: a.button.is-info(href="#chunk/#{chunk.id}")
          = chunk.id
        td
          each name in chunk.names
            code
              = name
              = " "

        td
          = chunk.modules ? chunk.modules.length : 'N/A'
        td
          = require('formatSize').default(chunk.size)
        td
          each parent in chunk.parents
            a.button.is-info(href="#chunk/#{parent}")
              = parent
              = " "
        td
          if chunk.rendered
            span.tag.is-success
              | rendered
              = " "
          if chunk.initial
            span.tag.is-info
              | initial
              = " "
          if chunk.entry
            span.tag.is-danger
              | entry
