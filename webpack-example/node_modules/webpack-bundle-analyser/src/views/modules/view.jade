table.table.is-fullwidth
  thead
    tr
      th id
      th name
      th.clickable.js-sort-size size
      th chunks
      th flags
  tbody
    each module in stats.modules
      tr
        td
          if typeof module.uid === 'number'
            a.button.is-black(href="#module/#{module.uid}")
              = module.id
          else
            span.button.is-black
              = module.uid
        td: pre: code= module.name.split('!').join('\n')
        td= require('formatSize').default(module.size)
        td
          each chunk in module.chunks
            a.button.is-info(href="#chunk/#{chunk}")
              = chunk
        td
          if module.built
            span.tag.is-success
              | built
          if !module.cacheable
            span.tag.is-warning
              | not cacheable
          if module.prefetched
            span.tag.is-success
              | prefetched
          if module.failed
            span.tag.is-danger
              | failed
          if module.warnings
            span.tag.is-warning
              = module.warnings + ' warnings'
          if module.errors
            span.tag.is-danger
              = module.errors + ' errors'
