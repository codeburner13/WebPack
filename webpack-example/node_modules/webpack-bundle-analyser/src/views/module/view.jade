.container
  .columns
    .column
      table.is-fullwidth(width="100%"): tbody: tr
        td: a.button.is-success(href="#module/#{module.uid}", disabled="disabled")
          = module.id
        td: pre: code
          = module.name.split('!').join('\n')

  .columns
    .column
      h4.title.is-3
        | Time
      if module.time
        code
          = module.time + 'ms'
        if module.timestamp
          = ' finished @ '
          code
            = module.timestamp + 'ms'
      else
        h5.subtitle
          | Compile with <code>--profile</code>.

    .column
      h4.title.is-3
        | Size
      h5.subtitle
        = require('formatSize').default(module.size)

  .columns
    .column
      h4.title.is-3
        | Flags
      if module.built
        span.tag.is-success
          | built
          = " "
      if !module.cacheable
          span.tag.is-warning
          | not cacheable
          = " "
      if module.prefetched
          span.tag.is-success
          | prefetched
          = " "
      if module.failed
          span.tag.is-danger
          | failed
          = " "
      if module.warnings
          span.tag.is-warning
          = module.warnings + ' warnings'
          = " "
      if module.errors
          span.tag.is-danger
            = module.errors + ' errors'

    .column
      h4.title.is-3
        | chunks
      each chunk in module.chunks
        a.button.is-info(href="#chunk/#{chunk}")
          = chunk

  if issuer
    .columns
      .column
        h4.title.is-3
          | Issuer
        table.is-fullwidth(width="100%"): tbody: tr
          td
            if typeof issuer.uid === 'number'
              a.button.is-success(href="#module/#{issuer.uid}")
                = issuer.id
            else
              span.button.is-success
                = issuer.id
          td: pre: code= issuer.name.split("!").join("\n")

  h4.title
    | Reasons

  table.table.is-fullwidth
    thead
      tr
        th type
        th(colspan=2) module
        th user request
        th location

      tbody
        each reason in module.reasons
          tr
            td
              = reason.type
            td(style="width: 1px")
              if typeof reason.moduleUid === 'number'
                a.button.is-success(href="#module/#{reason.moduleUid}")
                  = reason.moduleId
              else
                span.button.is-success
                  = reason.moduleId
            td: if reason.module
              pre: code
                = reason.module.split('!').join('\n')
            td: if reason.userRequest
              pre: code
                = reason.userRequest.split('!').join('\n')
            td
              if reason.loc
                code
                  = reason.loc

  h4.title
    | Dependencies

  table.table.is-fullwidth
    thead
      tr
        th type
        th(colspan=2) module
        th user request
        th location

      tbody
        each dependency in module.dependencies
          tr
            td
              = dependency.type
            td(style="width: 1px")
              if typeof dependency.moduleUid === 'number'
                a.button.is-success(href="#module/#{dependency.moduleUid}")
                  = dependency.moduleId
              else
                span.button.is-success
                  = dependency.moduleId
            td: if dependency.module
              pre: code= dependency.module.split('!').join('\n')
            td: if dependency.userRequest
              pre: code= dependency.userRequest.split('!').join('\n')
            td
              if dependency.loc
                code
                  = dependency.loc

table.table.is-fullwidth
  pre: code
    = module.source
